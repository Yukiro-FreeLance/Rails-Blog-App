<div class= "comment">
    <% unless comment.archived? %>
        <p>
            <strong><%= comment.commenter%>:</strong>
            <%= comment.body %>
        </p>
        <p>
            <%= link_to "Delete", [comment.article, comment], data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure you want to Delete?" 
                        } , class: 'button' %>
        </p>
    <%end%>
</div>