<section class="article-details">
    <div class="top">
        <h1><%= @article.title %></h1>
        <div class="actions">
            <%= link_to "Edit", edit_article_path(@article), class: 'button' %>
            <%= link_to "Delete", article_path(@article), method: :delete, data: {
             turbo_method: :delete,
                        turbo_confirm: "Are you sure you want to Delete?" 
                        } , class: 'button' %>
        </div>
    </div>
    <p class="article-body">
        <%= @article.body %>
    </p>
    <h2>Comments</h2>
    <%= render @article.comments %>

    <h2>Add a comment:</h2>
    <%= render 'comments/form' %>
</section>